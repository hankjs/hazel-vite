{
  "extends": [
    "@hazel/tsconfig/tsconfig.json",
    "@hazel/tsconfig/tsconfig.packages.json",
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "@hazel/tsconfig"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts"
  ]
}